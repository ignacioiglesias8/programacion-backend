<h1>Crear Nuevo Producto</h1>

<form>
    <label for="title">Título:</label>
    <textarea type="text" id="title" name="title" required></textarea>

    <label for="description">Descripción:</label>
    <textarea id="description" name="description" required></textarea>

    <label for="price">Precio:</label>
    <textarea id="price" name="price" required></textarea>

    <label for="code">Código:</label>
    <textarea id="code" name="code" required></textarea>

    <label for="stock">Stock:</label>
    <textarea id="stock" name="stock" required></textarea>

    <label for="category">Categoría:</label>
    <textarea id="category" name="category" required></textarea>

    <button onClick="sendEvent()">Crear Producto</button>
</form>

<div>
    <h1>Productos en tiempo real</h1>
    <div class="product-list">
    </div>
</div>

<h1>Eliminar Producto</h1>

<form>
    <label for="product-id">ID del Producto a Eliminar:</label>
    <input type="text" id="product-id" name="product-id" required>

    <button onClick="deleteProduct()">Eliminar Producto</button>
</form>

