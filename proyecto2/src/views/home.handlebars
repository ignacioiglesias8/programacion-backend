<div>
    <h1>Listado de todos los Productos</h1>
    <div class="product-list">
            <div>
                {{#if products.hasPrevPage}}
                    <a href={{products.prevLink}}><< Anterior</a>
                {{/if}}
            &nbsp;
                {{products.page}}
            &nbsp;
                {{#if products.hasNextPage}}
                    <a href={{products.nextLink}}>Siguiente >></a>
                {{/if}} 
            </div>
        {{#each products.docs}}
            <div class="product-card">
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                <p>Precio: {{price}}</p>
                <p>Stock: {{stock}}</p>
                <p>Id: {{id}}</p>
            </div>
        {{/each}}
    </div>
</div>